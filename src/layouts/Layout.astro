---
import '../styles/global.css';
import logo from '../assets/logos/logo.png';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>PHaSE Project – PRIN 2022</title>
		<meta name="description" content="PHaSE – Promoting Healthy and Sustainable Eating through Interactive and Explainable AI Methods. PRIN 2022 Project funded by MUR." />
	</head>
	<body class="bg-gray-50 text-gray-800 antialiased flex flex-col min-h-screen">
		<main class="flex-grow pb-24">
			<slot />
		</main>
		
		<!-- Sticky / Fixed Footer with Logos -->
		<footer class="fixed bottom-0 w-full bg-white shadow-[0_-4px_6px_-1px_rgba(0,0,0,0.1)] z-50 py-3 px-4 flex justify-center items-center">
			<div class="flex flex-wrap justify-center items-center gap-6 md:gap-12 max-w-6xl mx-auto h-16">
				<img src={logo.src} alt="PRIN PNRR Logo" class="h-12 md:h-16 object-contain" />
			</div>
		</footer>
	</body>
</html>
